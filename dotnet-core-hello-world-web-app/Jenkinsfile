pipeline {
    agent any
    
    // Auto trigger: Polling ile (1 dakikada bir kontrol eder)
    // Git push yapıldığında en geç 1 dakika içinde pipeline çalışır
    triggers {
        pollSCM('*/1 * * * *')  // Her 1 dakikada bir kontrol eder
    }
    
    environment {
        DOCKER_REGISTRY = 'nexus-docker-registry.default.svc.cluster.local:5000'
        IMAGE_NAME = 'dotnet-webapp'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        HELM_CHART_PATH = 'helm/webapp'
        // Nexus admin kullanıcısı (test için)
        NEXUS_USERNAME = 'admin'
        NEXUS_PASSWORD = 'admin123'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Unit Tests') {
            steps {
                script {
                    echo 'Running unit tests...'
                    try {
                        sh '''
                            cd dotnet-core-hello-world-web-app
                            dotnet test Tests/Tests.csproj --verbosity normal || true
                        '''
                    } catch (Exception e) {
                        echo "Tests failed but continuing: ${e.getMessage()}"
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    sh '''
                        cd dotnet-core-hello-world-web-app
                        docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} . || exit 1
                        docker tag ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest || exit 1
                    '''
                }
            }
        }
        
        stage('Push to Nexus') {
            steps {
                script {
                    echo 'Pushing image to Nexus...'
                    sh '''
                        echo "Logging into Docker registry: ${DOCKER_REGISTRY}"
                        # HTTP registry için insecure-registry gerekli
                        echo "${NEXUS_PASSWORD}" | docker login -u ${NEXUS_USERNAME} --password-stdin ${DOCKER_REGISTRY} 2>&1
                        if [ $? -ne 0 ]; then
                            echo "ERROR: Docker login failed!"
                            echo "Trying alternative login method..."
                            docker login -u ${NEXUS_USERNAME} -p ${NEXUS_PASSWORD} ${DOCKER_REGISTRY} 2>&1
                            if [ $? -ne 0 ]; then
                                echo "ERROR: Docker login failed with both methods!"
                                exit 1
                            fi
                        fi
                        echo "Pushing image: ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                        docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} 2>&1
                        if [ $? -ne 0 ]; then
                            echo "ERROR: Docker push failed for tag ${IMAGE_TAG}!"
                            exit 1
                        fi
                        echo "Pushing image: ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                        docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest 2>&1
                        if [ $? -ne 0 ]; then
                            echo "ERROR: Docker push failed for tag latest!"
                            exit 1
                        fi
                        echo "Successfully pushed images to Nexus"
                    '''
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo 'Deploying to Kubernetes using Helm...'
                    sh '''
                        cd dotnet-core-hello-world-web-app
                        # ClusterIP kullan (DNS çözümleme sorunu için)
                        # kubectl PATH'te olmayabilir, tam path kullan
                        KUBECTL_CMD=$(which kubectl || echo "/usr/local/bin/kubectl")
                        NEXUS_IP=$(${KUBECTL_CMD} get svc nexus-docker-registry -o jsonpath='{.spec.clusterIP}')
                        echo "Using Nexus ClusterIP: ${NEXUS_IP}"
                        helm upgrade --install dotnet-webapp ${HELM_CHART_PATH} \\
                            --set image.repository=${NEXUS_IP}:5000/${IMAGE_NAME} \\
                            --set image.tag=${IMAGE_TAG} \\
                            --set image.pullPolicy=Always \\
                            --namespace default
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}

